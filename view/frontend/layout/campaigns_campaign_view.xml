<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Theiconnz_Campaigns::css/global.css"/>
        <css src="Theiconnz_Campaigns::css/view.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Theiconnz\Campaigns\Block\Campaign" name="campaign_page" template="Theiconnz_Campaigns::form.phtml"/>
        </referenceContainer>

        <referenceContainer name="footer">
            <block class="Magento\ReCaptchaUi\Block\ReCaptcha"
                   name="recaptcha-newsletter"
                   after="-"
                   template="Theiconnz_Campaign::recaptcha_newsletter.phtml"
                   ifconfig="recaptcha_frontend/type_for/newsletter">
                <arguments>
                    <argument name="recaptcha_for" xsi:type="string">newsletter</argument>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_ReCaptchaFrontendUi/js/reCaptcha</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
